<?xml version="1.0" encoding="utf-8"?>
<plugin id="org.example.logiclinkplugin" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>
		LogicLinkPlugin
	</name>
	<js-module name="LogicLinkPlugin" src="www/LogicLinkPlugin.js">
		<clobbers target="org.example.logiclinkplugin" />
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="LogicLinkPlugin">
				<param name="android-package" value="org.example.logiclinkplugin.LogicLinkPlugin" />
			</feature>
		</config-file>

		<config-file parent="/manifest/application" target="AndroidManifest.xml">
		<provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="${applicationId}.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
				<meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/provider_paths" />
			</provider>
		</config-file>
		<source-file src="src/android/LogicLinkPlugin.java" target-dir="src/org/example/logiclinkplugin" />
		<source-file src="src/android/res/xml/provider_paths.xml" target="res/xml/provider_paths.xml"/>
		        <!-- Permissions -->
        <config-file parent="/manifest" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        </config-file>
	</platform>
	<dependency id="cordova-plugin-file"/>
	<dependency id="cordova-plugin-file-transfer"/>
</plugin>